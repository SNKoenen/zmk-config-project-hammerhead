#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        default_layer {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    ESC    |    Q    |    D    |    R    |    W    |    B    |       |    J    |    F    |    U    |    P    |    ;    |   DEL   |
      &kp ESC     &kp Q     &kp D     &kp R     &kp W     &kp B             &kp J     &kp F     &kp U     &kp P   &kp SEMI   &kp DEL
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    TAB    |    A    |    S    |    H    |    T    |    G    |       |    Y    |    N    |    E    |    O    |    I    |    '    |
     &kp TAB      &kp A     &kp S     &kp H     &kp T     &kp G             &kp Y     &kp N     &kp E     &kp O     &kp I   &kp APOS
// ---------------------------------------------------------------       -------------------------------------------------------------
// |  WINDOWS  |    Z    |    X    |    M    |    C    |    V    |       |    K    |    L    |    ,    |    .    |    /    |  ENTER  |
     &kp LGUI     &kp Z     &kp X     &kp M     &kp C     &kp V             &kp K     &kp L   &kp COMMA  &kp DOT  &kp FSLH  &kp ENTER
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       |  SHIFT  |BACKSPACE| LAYER_1 |PLAYPAUSE|       |  MUTE   | LAYER_2 |  SPACE  |  CTRL   |
                          &kp LSHFT &kp BSPC    &mo 1   &kp C_PP         &kp C_MUTE   &mo 2   &kp SPACE &kp LCTRL
//                       -----------------------------------------       -----------------------------------------
            >;

            sensor-bindings = <&inc_dec_kp C_NEXT C_PREV &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };


    number_layer {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
// |           |    !    |    @    |    #    |    $    |    %    |       |    ^     |    &    |    *    |    {    |    }    |        |
       &none    &kp EXCL    &kp AT  &kp HASH  &kp DLLR  &kp PRCNT         &kp CARET  &kp AMPS  &kp ASTRK &kp LBRC  &kp RBRC   &none
// ---------------------------------------------------------------       -------------------------------------------------------------
// |     `     |    1    |    2    |    3    |    4    |    5    |       |    6    |    7    |    8    |    9    |    0    |    \    |
     &kp GRAVE    &kp N1    &kp N2    &kp N3    &kp N4    &kp N5           &kp N6    &kp N7    &kp N8    &kp N9    &kp N0   &kp BSLH
// ---------------------------------------------------------------       -------------------------------------------------------------
// |           |    ~    |    _    |    -    |    +    |    =    |       |    [    |    ]    |    (    |    )    |    |    |         |
       $none    &kp TILDE &kp UNDER &kp MINUS &kp PLUS  &kp EQUAL         &kp LBKT  &kp RBKT  &kp LPAR  &kp RPAR  &kp PIPE    &none
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       |  SHIFT  |BACKSPACE| LAYER_1 |PLAYPAUSE|       |  MUTE   | LAYER_2 |  SPACE  |  CTRL   |
                          &kp LSHFT &kp BSPC    &mo 1   &kp C_PP         &kp C_MUTE   &mo 2   &kp SPACE &kp LCTRL
//                       -----------------------------------------       -----------------------------------------
            >;
        };


        control_layer {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
// |  BT CLR   |  DEV 0  |  DEV 1  |  DEV 2  |  DEV 3  |  DEV 4  |       | OUT_BLE |         |    UP   |         |         |         |
        &none     &none     &none     &none     &none     &none          &out OUT_BLE &none    &kp UP     &none     &none     &none    
// ---------------------------------------------------------------       -------------------------------------------------------------
// |           |         |         |         |         |         |       |         |  LEFT   |  DOWN   |  RIGHT  |         |         |
       &none     &none     &none     &none     &none     &none              &none   &kp LEFT  &kp DOWN  &kp RIGHT   &none     &none    
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    F1     |   F2    |   F3    |   F4    |   F5    |   F6    |       |   F7    |   F8    |   F9    |   F10   |   F11   |   F12   |
       &kp F1    &kp F2    &kp F3    &kp F4    &kp F5    &kp F6            &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12    
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       |  SHIFT  |BACKSPACE| LAYER_1 |PLAYPAUSE|       |  MUTE   | LAYER_2 |  SPACE  |  CTRL   |
                          &kp LSHFT &kp BSPC    &mo 1   &kp C_PP         &kp C_MUTE   &mo 2   &kp SPACE &kp LCTRL
//                       -----------------------------------------       -----------------------------------------
            >;
        };


    };
};