#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


/ {
    keymap {
        compatible = "zmk,keymap";
        
        default_layer {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    TAB    |    Q    |    W    |    E    |    R    |    T    |       |    Y    |    U    |    I    |    O    |    P    |         |
      &kp TAB     &kp Q     &kp W     &kp E     &kp R     &kp T             &kp Y     &kp U     &kp I     &kp O     &kp P     &none
// ---------------------------------------------------------------       -------------------------------------------------------------
// |   CTRL    |    A    |    S    |    D    |    F    |    G    |       |    H    |    J    |    K    |    L    |    ;    |    '    |
     &kp LCTRL    &kp A     &kp S     &kp D     &kp F     &kp G             &kp H     &kp J     &kp K     &kp L   &kp SEMI   &kp APOS
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    SHFT   |    Z    |    X    |    C    |    V    |    B    |       |    N    |    M    |    ,    |    .    |    /    |  SHFT   |
    &kp LSHFT     &kp Z     &kp X     &kp C     &kp V     &kp B             &kp N     &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       | WINDOWS |  SPACE  | LAYER_1 |  MUTE   |       |  MUTE   | LAYER_2 |  SPACE  |         |
                          &kp LGUI  &kp SPACE   &mo 1   &kp C_MUTE       &kp C_MUTE   &mo 2   &kp SPACE   &none
//                       -----------------------------------------       -----------------------------------------
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };


    right_layer_1 {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    TAB    |    Q    |    W    |    E    |    R    |    T    |       |   F7    |   F8    |   F9    |   F10   |   F11   |   F12   |
      &kp TAB     &kp Q     &kp W     &kp E     &kp R     &kp T            &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12
// ---------------------------------------------------------------       -------------------------------------------------------------
// |   CTRL    |    A    |    S    |    D    |    F    |    G    |       |    0    |    9    |    8    |    7    |    6    |         |
     &kp LCTRL    &kp A     &kp S     &kp D     &kp F     &kp G            &kp N0    &kp N9    &kp N8    &kp N7    &kp N6     &none
// ---------------------------------------------------------------       -------------------------------------------------------------
// |    SHFT   |    Z    |    X    |    C    |    V    |    B    |       |         |         |         |         |         |         |
    &kp LSHFT     &kp Z     &kp X     &kp C     &kp V     &kp B             &none     &none     &none     &none     &none     &none
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       |   GUI   |   SPC   |   LWR   |  MUTE   |       |         |         |         |         |               
                          &kp LGUI  &kp SPACE   &mo 1   &kp C_MUTE          &none     &none     &none     &none
//                       -----------------------------------------       -----------------------------------------
            >;
        };


        left_layer_1 {
            bindings = <
// ---------------------------------------------------------------       -------------------------------------------------------------
//   |   F1    |   F2    |   F3    |   F4    |   F5    |   F6    |       |    Y    |    U    |    I    |    O    |    P    |         |
       &kp F1    &kp F2    &kp F3    &kp F4    &kp F5    &kp F6             &kp Y     &kp U     &kp I     &kp O     &kp P     &none
// ---------------------------------------------------------------       -------------------------------------------------------------
//   |         |    5    |    4    |    3    |    2    |    1    |       |    H    |    J    |    K    |    L    |    ;    |    '    |
        &none    &kp N5    &kp N4    &kp N3    &kp N2    &kp N1             &kp H     &kp J     &kp K     &kp L   &kp SEMI   &kp APOS
// ---------------------------------------------------------------       -------------------------------------------------------------
//   |         |         |         |         |         |         |       |    N    |    M    |    ,    |    .    |    /    |  SHFT   |
        &none     &none     &none     &none     &none     &none             &kp N     &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
// ---------------------------------------------------------------       -------------------------------------------------------------
//                       |         |         |         |         |       |  MUTE   |   SPC   |  LAYER  |         |
                            &none     &none     &none     &none          &kp C_MUTE  &kp LGUI   &mo 2     &none
//                       -----------------------------------------       -----------------------------------------
            >;
        };
    };
};